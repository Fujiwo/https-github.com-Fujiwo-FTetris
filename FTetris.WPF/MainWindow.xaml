<Window x:Class="FTetris.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTetris.WPF"
        xmlns:viewModel="clr-namespace:FTetris.WPF.ViewModel"
        mc:Ignorable="d"
        Title="FTetris (Space: Start ←: Left →: Right ↑: Turn Right ↓: Turn Left)" Height="720" Width="280"
        PreviewKeyDown="OnPreviewKeyDown">
    <Window.Resources>
        <viewModel:GameViewModel x:Key="viewModel" />
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource viewModel}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding NextPentomino}" HorizontalAlignment="Left" Margin="10,0"/>
            <TextBlock Text="{Binding Score}" HorizontalAlignment="Right" Margin="10,0"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <local:GameBoardView x:Name="gameBoardView" DataContext="{Binding GameBoardViewModel}" />
        </Grid>
    </Grid>
</Window>
